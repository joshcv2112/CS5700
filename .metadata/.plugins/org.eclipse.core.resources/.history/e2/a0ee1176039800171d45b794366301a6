package behaviors;

import main.MatchPair;

public class MatchBirthAndMotherAlgorithm implements MatchAlgorithmBehavior {
	public boolean matchPair(MatchPair pair) {
		int tally = 0;
		
		if (pair.getP1().getBirthDay() == pair.getP2().getBirthDay()) 
			tally++;
		if (pair.getP1().getBirthMonth() == pair.getP2().getBirthMonth())
			tally++;
		if (pair.getP1().getBirthYear() == pair.getP2().getBirthYear())
			tally++;
		if (pair.getP1().getMotherFirstName().equals(null) || pair.getP2().getMotherFirstName().equals(null))
			tally++;
		if (pair.getP1().getMotherMiddleName().equals(null) || pair.getP2().getMotherMiddleName().equals(null))
			tally++;
		if (pair.getP1().getMotherLastName().equals(null) || pair.getP2().getMotherLastName().equals(null))
			tally++;
		
		if (tally == 6)
			return true;
		else
			return false;
	}
}

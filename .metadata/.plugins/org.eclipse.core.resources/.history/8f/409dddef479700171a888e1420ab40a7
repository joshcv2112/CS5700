package behaviors;

import main.MatchPair;

public class MatchNameAlgorithm implements MatchAlgorithmBehavior {
	public boolean matchPair(MatchPair pair) {
		boolean firstNameMatch = false,
				middleNameMatch = false,
				lastNameMatch = false;
		
		if (pair.getP1().getFirstName() == pair.getP2().getFirstName())
			firstNameMatch = true;
		if (pair.getP1().getMiddleName() == pair.getP2().getLastName())
			middleNameMatch = true;
		if (pair.getP1().getLastName() == pair.getP2().getLastName())
			lastNameMatch = true;
		
		if (firstNameMatch && lastNameMatch && middleNameMatch)  // All full name match!
			return true;
		else
			return false; 
	}

}
